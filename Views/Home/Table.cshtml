@{
    ViewData["Title"] = "Movie Database";
}
<h1>@ViewData["Title"]</h1>
<!-- -->

@model List<MovieForm>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <table class="table table-striped table-hover">
        <thead fw="bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Copied to Plex</td>
                <td>Notes</td>
            </tr>
        </thead>

        @foreach (var x in Model)
        {
            <tbody>
                <tr>
                    <td>@x.Category?.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.CopiedToPlex</td>
                    <td>@x.Notes</td>

                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieFormId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieFormId">Delete</a></td>
                </tr>
            </tbody>
        }

    </table>
</div>
