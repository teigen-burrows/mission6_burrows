@{
    ViewData["Title"] = "Movies";
}
<h1>@ViewData["Title"]</h1>

@model mission6_burrows.Models.MovieForm

<form method="post">
    <label asp-for="Category">Category: </label>
    <input asp-for="Category" required />
    <br />
    <br />
    <label asp-for="Title">Title: </label>
    <input asp-for="Title" required />
    <br />
    <br />
    <label asp-for="Year">Year: </label>
    <input asp-for="Year" required />
    <br />
    <br />
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" required />
    <br />
    <br />
    <label asp-for="Rating" for="rating">Rating:</label>
    <select asp-for="Rating" id="rating" name="rating" required>
        <option value=""> </option>
        <option value="1">G</option>
        <option value="2">PG</option>
        <option value="3">PG-13</option>
        <option value="4">R</option>
    </select>
    <br />
    <br />
    <label asp-for="Edited" for="edited">Edited:</label>
    <select asp-for="Edited" id="edited" name="edited">
        <option value=""> </option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for ="LentTo">Lent To: </label>
    <input asp-for="LentTo" />
    <br />
    <br />
    <label asp-for ="Notes">Notes: </label>
    <input asp-for="Notes" maxlength="25" />
    <br />
    <br />
    <input type="submit" value="Submit" />
</form>